<Window x:Class="Modulo15.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Slider Name="slider" HorizontalAlignment="Left" Margin="126,210,0,0" VerticalAlignment="Top" Maximum="100" Width="200"/>
		<Ellipse 
				Height="{Binding ElementName=slider, Path=Value}" 
				Width="{Binding ElementName=slider, Path=Value}"
				Fill="Red" 
				HorizontalAlignment="Left" 
				Margin="166,93,0,0" Stroke="Black" VerticalAlignment="Top" />



	</Grid>
</Window>
