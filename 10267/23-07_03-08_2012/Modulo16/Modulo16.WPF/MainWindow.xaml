<Window x:Class="Modulo16.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Ellipse Width="{Binding ElementName=slider1, Path=Value}" Height="{Binding ElementName=slider2, Path=Value}" HorizontalAlignment="Left" Margin="163,102,0,0" Name="ellipse1" Stroke="Black" VerticalAlignment="Top" />

		<Slider Height="23" HorizontalAlignment="Left" Margin="133,247,0,0" Name="slider1" VerticalAlignment="Top" Width="230" Maximum="1000" />
		<Slider Height="23" HorizontalAlignment="Left" Margin="133,218,0,0" Name="slider2" VerticalAlignment="Top" Width="230" Maximum="1000" />
	</Grid>
</Window>
