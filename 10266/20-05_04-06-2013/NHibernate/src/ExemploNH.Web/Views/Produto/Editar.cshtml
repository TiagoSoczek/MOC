@model ExemploNH.Model.Produto

<h1>Novo Produto</h1>

@using (Html.BeginForm("Salvar", "Produto", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.HiddenFor(p => p.Id)

	<!--NOTE: Tomar cuidado com a precisão de valores DateTime-->
	@Html.HiddenFor(p => p.DataCadastro)
	
	<fieldset>
		<legend>Propriedades</legend>

		<div class="control-group">
			<label class="control-label" for="produto.Nome">Nome:</label>
			<div class="controls">
				@Html.TextBoxFor(m => m.Nome, new { id = "produto.Nome", required = "required", autofocus = "autofocus" })
				<span class="help-block">Nome do Produto</span>
			</div>
		</div>

		<div class="control-group">
			<label class="control-label" for="produto.Preco">Preço:</label>
			<div class="controls">
				@Html.TextBoxFor(m => m.Preco, new { id = "produto.Preco", required = "required" })
				<span class="help-block">Preço atual</span>
			</div>
		</div>
		
		<div class="control-group">
			<label class="control-label" for="produto.Quantidade">Quantidade:</label>
			<div class="controls">
				@Html.TextBoxFor(m => m.Quantidade, new { id = "produto.Quantidade", required = "required" })
				<span class="help-block">Quantidade em estoque</span>
			</div>
		</div>

		<div class="form-actions">
			<button type="submit" class="btn btn-primary">Salvar</button>
			<a href="@Url.Action("Index")" class="btn">Cancelar</a>
		</div>
	</fieldset>
}